@{
    ViewData["Title"] = "Account Locked";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card">
    <div class="card-body text-center p-5">
        <div class="mb-4">
            <i class="fas fa-lock text-warning" style="font-size: 4rem;"></i>
        </div>
        
        <h2 class="h4 mb-3 text-danger">Account Locked</h2>
        
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Your account has been locked due to multiple failed login attempts.
        </div>
        
        <p class="text-muted mb-4">
            For security reasons, your account has been temporarily locked. 
            Please wait 30 minutes before attempting to log in again.
        </p>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <a asp-action="Login" class="btn btn-outline-primary w-100">
                    <i class="fas fa-arrow-left me-2"></i>Back to Login
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a asp-action="ForgotPassword" class="btn btn-primary w-100">
                    <i class="fas fa-key me-2"></i>Reset Password
                </a>
            </div>
        </div>
        
        <hr class="my-4">
        
        <p class="text-muted small">
            If you continue to have trouble accessing your account, 
            please <a href="mailto:support@taskmanager.com">contact support</a>.
        </p>
    </div>
</div>