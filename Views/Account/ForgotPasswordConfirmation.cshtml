@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card">
    <div class="card-body text-center p-5">
        <div class="mb-4">
            <i class="fas fa-envelope-circle-check text-success" style="font-size: 4rem;"></i>
        </div>
        
        <h2 class="h4 mb-3 text-success">Reset Link Sent!</h2>
        
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            If an account with that email exists, we've sent you a password reset link.
        </div>
        
        <p class="text-muted mb-4">
            Check your email inbox (and spam folder) for instructions on how to reset your password.
        </p>
        
        <div class="bg-light rounded p-3 mb-4">
            <small class="text-muted">
                <i class="fas fa-lightbulb me-1"></i>
                <strong>Tip:</strong> The reset link will expire in 24 hours for security purposes.
            </small>
        </div>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a asp-action="Login" class="btn btn-outline-primary me-md-2">
                <i class="fas fa-sign-in-alt me-2"></i>Back to Login
            </a>
            <a asp-action="ForgotPassword" class="btn btn-primary">
                <i class="fas fa-redo me-2"></i>Send Another Link
            </a>
        </div>
        
        <hr class="my-4">
        
        <p class="text-muted small">
            Didn't receive the email? Check your spam folder or 
            <a href="mailto:support@taskmanager.com">contact support</a>.
        </p>
    </div>
</div>