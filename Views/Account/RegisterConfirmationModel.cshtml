@model TaskManager.Web.ViewModels.Auth.RegisterViewModel
@{
    ViewData["Title"] = "Registration Confirmation";
    Layout = "_Layout"; // Ensure this points to your shared layout file
}

@section Scripts {
    <script src="https://cdn.tailwindcss.com"></script>
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
    }
</style>

<div class="min-h-screen flex items-center justify-center bg-gray-100 p-4 sm:p-6 lg:p-8">
    <div class="bg-white p-6 sm:p-8 md:p-10 rounded-xl shadow-lg w-full max-w-md text-center">
        <div class="flex justify-center mb-6">
            <!-- Icon for email confirmation -->
            <svg class="w-20 h-20 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.928-5.5L20 8.025V20H4V8z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 12l-4 4-2-2"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2v6h6V2l-3 3-3-3z"></path>
            </svg>
        </div>

        <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-4">Registration Successful!</h1>
        <p class="text-gray-600 mb-6 text-base sm:text-lg">
            Thank you for registering with Task Manager.
        </p>
        <p class="text-gray-700 mb-8 text-lg sm:text-xl font-medium">
            A confirmation email has been sent to <strong>@Model.Email</strong>.
        </p>

        <div class="bg-blue-50 border-l-4 border-blue-400 text-blue-800 p-4 rounded-lg mb-8" role="alert">
            <p class="font-semibold text-sm sm:text-base mb-2">Important:</p>
            <p class="text-sm sm:text-base">
                Please check your <strong>spam</strong> or <strong>junk</strong> folder if you don't see it in your primary inbox within a few minutes.
            </p>
        </div>

        <p class="text-gray-600 text-sm sm:text-base">
            Once you confirm your email, you'll be able to log in and start managing your tasks.
        </p>

        <div class="mt-8">
            <a href="@Url.Action("ResendConfirmationEmail", "Account", new { email = Model.Email })"
               class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-full transition duration-300 ease-in-out shadow-md hover:shadow-lg">
                Resend Confirmation Email
            </a>
        </div>
    </div>
</div>