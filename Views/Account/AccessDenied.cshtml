@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="fas fa-ban text-danger" style="font-size: 4rem;"></i>
                </div>
                
                <h2 class="h3 mb-3 text-danger">Access Denied</h2>
                
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    You don't have permission to access this resource.
                </div>
                
                <p class="text-muted mb-4">
                    The page you're trying to access requires special permissions that your account doesn't have.
                </p>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="javascript:history.back()" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Dashboard
                    </a>
                </div>
                
                <hr class="my-4">
                
                <p class="text-muted small">
                    If you believe this is an error, please 
                    <a href="mailto:support@taskmanager.com">contact support</a>.
                </p>
            </div>
        </div>
    </div>
</div>