@{
    ViewData["Title"] = "Welcome to Task Manager";
}

<div class="row min-vh-100 align-items-center">
    <div class="col-lg-6">
        <div class="pe-lg-5">
            <h1 class="display-4 fw-bold mb-4">
                Organize Your Life with 
                <span class="text-primary">Task Manager</span>
            </h1>
            <p class="lead mb-4">
                Stay productive and never miss a deadline. Manage your tasks, 
                organize projects, and track your progress all in one place.
            </p>
            
            <div class="row mb-4">
                <div class="col-sm-6 mb-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-tasks text-primary"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Task Management</h6>
                            <small class="text-muted">Create and organize tasks</small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-folder text-success"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Project Organization</h6>
                            <small class="text-muted">Group related tasks</small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-chart-pie text-warning"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Progress Tracking</h6>
                            <small class="text-muted">Monitor your productivity</small>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="fas fa-bell text-info"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Smart Reminders</h6>
                            <small class="text-muted">Never miss deadlines</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="d-flex gap-3 flex-wrap">
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Get Started Free
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6">
        <div class="text-center">
            <div class="position-relative">
                <!-- Mock Dashboard Preview -->
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="card bg-primary bg-opacity-10 border-0">
                                    <div class="card-body text-center py-3">
                                        <i class="fas fa-list text-primary fa-2x mb-2"></i>
                                        <h5 class="text-primary mb-0">24</h5>
                                        <small class="text-muted">Total Tasks</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card bg-success bg-opacity-10 border-0">
                                    <div class="card-body text-center py-3">
                                        <i class="fas fa-check-circle text-success fa-2x mb-2"></i>
                                        <h5 class="text-success mb-0">18</h5>
                                        <small class="text-muted">Completed</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-start">
                            <h6 class="mb-3">Recent Tasks</h6>
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-warning rounded me-2" style="width: 12px; height: 12px;"></div>
                                <span class="flex-grow-1">Design homepage mockup</span>
                                <small class="text-muted">Today</small>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-success rounded me-2" style="width: 12px; height: 12px;"></div>
                                <span class="flex-grow-1">Review project proposal</span>
                                <small class="text-muted">Done</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary rounded me-2" style="width: 12px; height: 12px;"></div>
                                <span class="flex-grow-1">Update documentation</span>
                                <small class="text-muted">Tomorrow</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Floating elements for visual appeal -->
                <div class="position-absolute top-0 start-0 translate-middle">
                    <div class="bg-primary rounded-circle p-3 shadow">
                        <i class="fas fa-tasks text-white"></i>
                    </div>
                </div>
                <div class="position-absolute top-0 end-0 translate-middle-y">
                    <div class="bg-success rounded-circle p-2 shadow">
                        <i class="fas fa-check text-white"></i>
                    </div>
                </div>
                <div class="position-absolute bottom-0 start-0 translate-middle-x">
                    <div class="bg-warning rounded-circle p-2 shadow">
                        <i class="fas fa-calendar text-white"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.min-vh-100 {
    min-height: calc(100vh - 200px);
}
</style>